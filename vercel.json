{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "out"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/admin/config.yml", "dest": "/api/config" },
    { "src": "/admin/(.*)", "dest": "/admin" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "next build && next export -o out"
}

